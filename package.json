{
  "name": "@moleculer/channels",
  "version": "0.2.0",
  "description": "Reliable messages for Moleculer services",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon examples/index.js",
    "check": "tsc --noEmit true",
    "types": "tsc --emitDeclarationOnly true --noEmitOnError false",
    "ci": "vitest --watch",
    "test": "vitest --coverage --run",
    "lint": "eslint --ext=.js src examples test",
    "bench": "node benchmark/index.js",
    "bench:watch": "nodemon benchmark/index.js",
    "deps": "ncu -i",
    "ci-deps": "ncu --target minor",
    "ci-update-deps": "ncu -u --target minor",
    "coverall": "cat ./coverage/lcov.info | ./node_modules/coveralls-next/bin/coveralls.js",
    "test:up": "docker compose -f test/docker-compose.yml up -d",
    "test:down": "docker compose -f test/docker-compose.yml down -v",
    "release": "npm publish --access public && git push --follow-tags"
  },
  "keywords": [
    "moleculer",
    "microservice"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/moleculerjs/moleculer-channels.git"
  },
  "typings": "types/index.d.ts",
  "author": "MoleculerJS",
  "license": "MIT",
  "peerDependencies": {
    "moleculer": "^0.14.12 || ^0.15.0-0"
  },
  "devDependencies": {
    "@platformatic/kafka": "^1.17.1",
    "@types/node": "^24.7.2",
    "@vitest/coverage-v8": "^3.2.4",
    "amqplib": "^0.10.9",
    "benchmarkify": "^4.0.0",
    "coveralls-next": "^5.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-security": "^1.7.1",
    "hwp": "^0.4.1",
    "ioredis": "^5.8.1",
    "kleur": "^4.1.5",
    "moleculer": "^0.15.0-beta2",
    "moleculer-repl": "^0.7.4",
    "msgpack5": "^6.0.2",
    "nats": "^2.29.3",
    "nodemon": "^3.1.10",
    "npm-check-updates": "^19.0.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "jest": {
    "testEnvironment": "node",
    "rootDir": "./src",
    "roots": [
      "../test"
    ],
    "coverageDirectory": "../coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "engines": {
    "node": ">= 20.x.x"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "semver": "^7.7.2"
  }
}
